                        <label class="btn btn-primary btn-lg" for="option2">50/50</label>

                        <input type="radio" class="btn-check" value="Sælger" name="options" id="option3" autocomplete="off" />
                        <label class="btn btn-primary btn-lg" for="option3">Sælger</label>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-offset-4 col-md-6 hidden-radio">
