                        <input type="radio" class="btn-check" value="0,5 - 1 kg" name="weight-of-package" id="weight-of-package2" autocomplete="off" />
                        <label class="btn btn-primary btn-lg" for="weight-of-package2">0,5 - 1 kg</label>

                        <input type="radio" class="btn-check" value="1 - 3 kg" name="weight-of-package" id="weight-of-package3" autocomplete="off" />
