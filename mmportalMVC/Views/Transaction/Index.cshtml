@Scripts.Render("~/bundles/jquery")
<script>
    var currentStep = 1;

    $(document).ready(function () {
        //$(".step1").css("display", "none");
        //$(".step2").css("display", "none");
        //$(".step3").css("display", "block");
        $("#step-forward").click(function () {
            currentStep++;
            changeStep();
        });

        $("#step-back").click(function () {
            currentStep--;
            changeStep();
        });
    });

    function changeStep() {
        switch (currentStep) {
            case 1:
                changeToStep1();
                break;
            case 2:
                changeToStep2();
                break;
            case 3:
                changeToStep3();
                break;
            case 4:
                changeToStep4();
                break;
            default:
                break;
        }
    }

    function changeToStep1() {
        $("#step-back").css("visibility", "hidden");

        $(".step1").css("display", "block");
        $(".step2").css("display", "none");


        $(".step-2").toggleClass("complete");
        $(".step-2").toggleClass("disabled");
    }

    function changeToStep2() {
        $("#step-back").css("visibility", "visible");

        $(".step1").css("display", "none");
        $(".step2").css("display", "block");
        $(".step3").css("display", "none");


        var step2toggle = $(".step-2").hasClass("disabled");
        if (step2toggle) {
            $(".step-2").toggleClass("complete");
            $(".step-2").toggleClass("disabled");
        }
        var step3toggle = $(".step-3").hasClass("complete");
        if (step3toggle) {
            $(".step-3").toggleClass("complete");
            $(".step-3").toggleClass("disabled");
        }
    }

    function changeToStep3() {

        $(".step2").css("display", "none");
        $(".step3").css("display", "block");
        $(".step4").css("display", "none");
        $("#step-forward").text("Næste >");
        var step3toggle = $(".step-3").hasClass("disabled");
        if (step3toggle) {
            $(".step-3").toggleClass("complete");
            $(".step-3").toggleClass("disabled");
        }
        var step4toggle = $(".step-4").hasClass("active");
        if (step4toggle) {
            $(".step-4").toggleClass("active");
            $(".step-4").toggleClass("disabled");
        }
        calculateServicePrice();
    }

    function changeToStep4() {
        $("#step-forward").text("Afslut");
        $(".step3").css("display", "none");
        $(".step4").css("display", "block");
        var step4toggle = $(".step-4").hasClass("disabled");
        if (step4toggle) {
            $(".step-4").toggleClass("active");
            $(".step-4").toggleClass("disabled");
        }
        prepareStep4();
    }
    function prepareStep4() {
        $("#who-am-i-pgh").text($('input[name="who-am-i"]:checked').val());
        $("#who-pays-pgh").text($('input[name="options"]:checked').val());
        $("#service-plan-pgh").text($('input[name="service-plan"]:checked').val());        
        $("#weight-of-package-pgh").text($('input[name="weight-of-package"]:checked').val());        
        
        $("#inputDescription-pgh").text($("#inputDescription").val());
        $("#inputCategori-pgh").text($("#inputCategori").val());
        $("#inputEmail-pgh").text($("#inputEmail").val());
        $("#inputName-pgh").text($("#inputName").val());
        $("#inputAmount-pgh").text($("#inputAmount").val() + " kr.");
        $("#inputAmountWithFee-pgh").text($("#total-salary-amount").text());


        //eks
        //$("#who-am-i-pgh").val($("#companyNameLabel").html());
    }

    function calculateServicePrice() {
        var service = $('input[name="service-plan"]:checked').val();
        var serviceAmount = 0;
        var totalAmount = 0;
        var amount = $("#inputAmount").val();
        if (service.includes("Standard")) {
            if (amount > 299) {
                serviceAmount = amount / 10;                
            }
            else {
                serviceAmount = 299;                
            }
            totalAmount = parseInt(amount) + parseInt(serviceAmount);
        }
        else {
            if (amount > 599) {
                serviceAmount = amount / 4;
            }
            else {
                serviceAmount = 599;
            }
            totalAmount = parseInt(amount) + parseInt(serviceAmount);
        }

        $("#service-salary-amount").text(serviceAmount + " kr.");
        $("#total-salary-amount").text(totalAmount + " kr.");        
    }
</script>

